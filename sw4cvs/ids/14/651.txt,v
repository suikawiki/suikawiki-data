;; [23] [CODE(HTMLe)@@en[[[body]]]] のほぼ全体が [CODE(HTMLe)@@en[[[table]]]] となっています。
]FIGCAPTION]

[PRE(HTML example code)[
	<body>
		<div id="wrapper">
			<div id="contents_container">
				<table id="contents" cellspacing="0" summary="contents">
					<tr id="gnavi">
]PRE]
]FIG]@


