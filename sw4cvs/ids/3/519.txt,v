,[CODE(SGML)[[[NAME]]]]	,×	,○	,○	,○
,[CODE(SGML)[[[NAMES]]]]	,×	,○	,○	,○
,[CODE(SGML)[[[NMTOKEN]]]]	,○	,○	,○	,○
,[CODE(SGML)[[[NMTOKENS]]]]	,○	,○	,○	,○
,[CODE(SGML)[[[NOTATION]]]]	,△	,△	,×	,×
,[CODE(SGML)[[[NUMBER]]]]	,×	,○	,○	,○
