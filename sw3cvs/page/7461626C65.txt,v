,[CODE(HTMLa)[[[bordercolor]]]]	,[CODE(SGML)[%[[Color]]]]	,	,境界線色	,非標準
,[CODE(HTMLa)[[[bordercolordark]]]]	,[CODE(SGML)[%[[Color]]]]	,	,境界線色 (暗色)	,非標準
