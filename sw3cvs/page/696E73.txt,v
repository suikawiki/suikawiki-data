,[CODE(HTMLa)[[[class]]]]	,	,	,[[級]]	,[HTML4] %[[coreattr]]
,[CODE(HTMLa)[[[datetime]]]]	,[CODE(SGML)[%[[Datetime]]]]	,(なし)	,修正日時	,[HTML4]
