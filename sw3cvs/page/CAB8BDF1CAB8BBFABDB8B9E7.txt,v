        41377     94  8481    -- 2121 --
        41471    162  UNUSED
        41633     14  8737    -- 2221 --
        41647     11  UNUSED
 [INS[(略)]]
        62625      6  29371   -- 7421 --
        62631   2905  UNUSED
]PRE]

