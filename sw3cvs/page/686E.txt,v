,[CODE(HTMLa)[[[dataformat]]]]	,	,	,データ書式	,[HTML4] 予約
,[CODE(HTMLa)[[[datasrc]]]]	,[CODE(SGML)[%[[URI]]]]	,	,データ源	,[HTML4] 予約
,[CODE(HTMLa)[[[dir]]]]	,	,	,[[書字方向]]	,[HTML4] %[[i18n]]
,[CODE(HTMLa)[[[id]]]]	,[CODE(SGML)[[[ID]]]]	,	,一意識別子	,[HTML4] %coreattr
