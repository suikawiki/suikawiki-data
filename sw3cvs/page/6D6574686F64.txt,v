[CODE(HTMLe)@@en[[QN[[[input]]][http://www.w3.org/1999/xhtml]]]]
([CODE(HTML)@@en[[[image]]]]、[CODE(HTML)@@en[[[submit]]]])、
[CODE(HTMLe)@@en[[QN[[[button]]][http://www.w3.org/1999/xhtml]]]]
([CODE(HTML)@@en[[[submit]]]])
