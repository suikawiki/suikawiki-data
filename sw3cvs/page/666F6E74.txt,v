([[名無しさん]] [sage])

[12]
[SAMP(CSS)[font: medium -moz-fixed;]]
([[名無しさん]] [sage])

[13]
[SAMP(CSS)[font: -moz-list;]]
([[名無しさん]] [sage])

[14]
[SAMP(CSS)[font: -moz-button;]]
([[名無しさん]] [sage])

[15]
[CODE(CSS example)@@en[font: [[-webkit-small-control]];]]
([[名無しさん]] [sage])

[16]
[CODE(CSS example)@@en[font: [[-webkit-small-control]];]]
([[名無しさん]] [sage])

