,[CODE[SUIMIN]]	,○	,	,睡眠時間
,[CODE[BGM]]	,○	,	,背景音楽
,[CODE[HOSU]]	,○	,	,歩数
,[CODE[HON]]	,○	,	,読書
,[CODE[KITAKU]]	,○	,	,帰宅時間
,[CODE[WALK]]	,○	,	,散歩
,[CODE[RUN]]	,○	,	,ジョギング
,[CODE[KEYWORD]]	,○	,	,鍵語
,[CODE[CAT]]	,○	,	,分類
