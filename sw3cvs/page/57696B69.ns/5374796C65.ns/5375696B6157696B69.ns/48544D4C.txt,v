/* cite: CITE element */
cite {
  font-style: normal;
}
cite:before {
  content: "『";
}
cite:after {
  content: "』";
}

/* cite.src: SRC element */
cite.src {
  vertical-align: super;
}
cite.src:before {
  content: "";
}
cite.src:after {
  content: "";
}

cite.src {
  -moz-binding: url(http://suika.fam.cx/www/style/ui/sidenote.xbl#footnote);
}
ab|fnref {
  vertical-align: super;
  color: gray;
  font-size: smaller;
  line-height: 1.0;
}
ab|fnref:before {
  content: "*";
}

/* q: Q element */
q:before {content: "「"} q:after {content: "」"}
q q:before {content: "『"} q q:after {content: "』"}
q q q:before {content: "「"} q q q:after {content: "」"}
cite q:before {content: "「"} cite q:after {content: "」"}
q cite:before {content: "『"} q cite:after {content: "』"}
q cite q:before {content: "「"} q cite q:after {content: "」"}

/* ruby */

