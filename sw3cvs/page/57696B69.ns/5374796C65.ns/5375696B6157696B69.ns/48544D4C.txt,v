  display: table-footer-group !important;
}
ruby[moz-ruby-parsed="done"].descriptive rt RUBY|cell {
  vertical-align: 0.1em !important;
}

dt rt {
  text-align: left;
}

dt ruby[moz-ruby-parsed="done"] RUBY|cell {
  text-align: left !important;
}


