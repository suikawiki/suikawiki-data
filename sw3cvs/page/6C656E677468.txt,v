,[[m]]    ,米
,[[mm]]   ,粍              ,"[CSS], [4052]"
,[[pc]]   ,パイカ          ,[CSS]
,[[pi]]   ,(1/6吋)
,[[jpt]]  ,ポイント (日本) ,[4052]
,[[pt]]   ,ポイント (DTP)  ,"[CSS], [4052]"
,[[q]]    ,級              ,"[4052]"
