,[CODE(HTMLa)@@en[[[movable]]]],[CODE(example)@@en[[[True]]]],,,"非標準"
,[CODE(HTMLa)@@en[[[multiinstance]]]],[CODE(example)@@en[[[False]]]],,,"非標準"
